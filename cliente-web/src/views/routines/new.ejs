<script>
// Manejar la selecci√≥n de archivo
document.getElementById('gcodeFile').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
        const label = document.querySelector('.file-text');
        label.textContent = file.name;
        
        // Leer el archivo y mostrar su contenido en el textarea
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('gcodeContent').value = e.target.result;
            document.getElementById('filename').value = file.name;
        };
        reader.readAsText(file);
    }
});

// Validar formulario antes del env√≠o
document.querySelector('.routine-form').addEventListener('submit', function(e) {
    const file = document.getElementById('gcodeFile').files[0];
    const content = document.getElementById('gcodeContent').value.trim();
    const filename = document.getElementById('filename').value.trim();
    
    if (!file && (!content || !filename)) {
        e.preventDefault();
        alert('Debes subir un archivo G-code o escribir contenido manualmente con un nombre de archivo.');
        return false;
    }
    
    return true;
});
</script>