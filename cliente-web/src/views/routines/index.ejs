<div class="page-header">
    <h2>üîß Gesti√≥n de Rutinas G-code</h2>
    <div class="actions">
        <a href="/routines/new" class="btn btn-primary">‚ûï Nueva Rutina</a>
        <a href="/panel" class="btn btn-secondary">üè† Panel Principal</a>
    </div>
</div>

<% if (locals.error) { %>
    <div class="alert alert-error">
        <strong>‚ùå Error:</strong> <%= error %>
    </div>
<% } %>

<% if (locals.success) { %>
    <div class="alert alert-success">
        <strong>‚úÖ √âxito:</strong> <%= success %>
    </div>
<% } %>

<div class="routines-container">
    <% if (routines && routines.length > 0) { %>
        <div class="routines-grid">
            <% routines.forEach(routine => { %>
                <div class="routine-card">
                    <div class="routine-header">
                        <h3><%= routine.filename %></h3>
                        <span class="file-size"><%= Math.round(routine.fileSize / 1024 * 100) / 100 %> KB</span>
                    </div>
                    
                    <div class="routine-info">
                        <p class="description">
                            <strong>Descripci√≥n:</strong> 
                            <%= routine.description || 'Sin descripci√≥n' %>
                        </p>
                        <p class="created-date">
                            <strong>Creada:</strong> 
                            <%= new Date(routine.createdAt * 1000).toLocaleString('es-ES') %>
                        </p>
                        <% if (routine.originalFilename !== routine.filename) { %>
                            <p class="original-name">
                                <strong>Archivo original:</strong> <%= routine.originalFilename %>
                            </p>
                        <% } %>
                    </div>
                    
                    <div class="routine-actions">
                        <a href="/routines/<%= routine.id %>" class="btn btn-info btn-sm">üëÅÔ∏è Ver</a>
                        <a href="/routines/<%= routine.id %>/edit" class="btn btn-warning btn-sm">‚úèÔ∏è Editar</a>
                        <a href="/routines/<%= routine.id %>/download" class="btn btn-secondary btn-sm">üíæ Descargar</a>
                        
                        <form method="post" action="/routines/<%= routine.id %>/execute" style="display: inline;">
                            <button type="submit" class="btn btn-success btn-sm" 
                                    onclick="return confirm('¬øEjecutar rutina <%= routine.filename %>?')">
                                ‚ñ∂Ô∏è Ejecutar
                            </button>
                        </form>
                        
                        <form method="post" action="/routines/<%= routine.id %>/delete" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm" 
                                    onclick="return confirm('¬øEst√°s seguro de eliminar <%= routine.filename %>?')">
                                üóëÔ∏è Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-icon">üìÑ</div>
            <h3>No tienes rutinas G-code</h3>
            <p>Crea tu primera rutina subiendo un archivo G-code o escribiendo c√≥digo directamente.</p>
            <a href="/routines/new" class="btn btn-primary">‚ûï Crear Primera Rutina</a>
        </div>
    <% } %>
</div>

