<div class="page-header">
    <h2>üëÅÔ∏è Ver Rutina: <%= routine.filename %></h2>
    <div class="actions">
        <a href="/routines" class="btn btn-secondary">üîô Volver a Rutinas</a>
        <a href="/routines/<%= routine.id %>/edit" class="btn btn-warning">‚úèÔ∏è Editar</a>
    </div>
</div>

<% if (locals.error) { %>
    <div class="alert alert-error">
        <strong>‚ùå Error:</strong> <%= error %>
    </div>
<% } %>

<% if (locals.success) { %>
    <div class="alert alert-success">
        <strong>‚úÖ √âxito:</strong> <%= success %>
    </div>
<% } %>

<div class="routine-container">
    <div class="routine-details">
        <div class="detail-card">
            <h3>üìã Informaci√≥n de la Rutina</h3>
            <div class="detail-grid">
                <div class="detail-item">
                    <label>Nombre del archivo:</label>
                    <value><%= routine.filename %></value>
                </div>
                <% if (routine.originalFilename !== routine.filename) { %>
                    <div class="detail-item">
                        <label>Archivo original:</label>
                        <value><%= routine.originalFilename %></value>
                    </div>
                <% } %>
                <div class="detail-item">
                    <label>Descripci√≥n:</label>
                    <value><%= routine.description || 'Sin descripci√≥n' %></value>
                </div>
                <div class="detail-item">
                    <label>Tama√±o del archivo:</label>
                    <value><%= Math.round(routine.fileSize / 1024 * 100) / 100 %> KB</value>
                </div>
                <div class="detail-item">
                    <label>Fecha de creaci√≥n:</label>
                    <value><%= new Date(routine.createdAt * 1000).toLocaleString('es-ES') %></value>
                </div>
                <div class="detail-item">
                    <label>ID de rutina:</label>
                    <value>#<%= routine.id %></value>
                </div>
            </div>
        </div>

        <div class="actions-card">
            <h3>‚ö° Acciones Disponibles</h3>
            <div class="action-buttons">
                <form method="post" action="/routines/<%= routine.id %>/execute" style="display: inline;">
                    <button type="submit" class="btn btn-success" 
                            onclick="return confirm('¬øEjecutar la rutina <%= routine.filename %>?')">
                        ‚ñ∂Ô∏è Ejecutar Rutina
                    </button>
                </form>
                
                <a href="/routines/<%= routine.id %>/download" class="btn btn-info">
                    üíæ Descargar Archivo
                </a>
                
                <a href="/routines/<%= routine.id %>/edit" class="btn btn-warning">
                    ‚úèÔ∏è Editar Rutina
                </a>
                
                <form method="post" action="/routines/<%= routine.id %>/delete" style="display: inline;">
                    <button type="submit" class="btn btn-danger" 
                            onclick="return confirm('¬øEst√°s seguro de eliminar la rutina <%= routine.filename %>? Esta acci√≥n no se puede deshacer.')">
                        üóëÔ∏è Eliminar Rutina
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="code-section">
        <div class="code-card">
            <div class="code-header">
                <h3>üìÑ Contenido G-code</h3>
                <div class="code-stats">
                    <span class="line-count"><%= routine.gcodeContent.split('\n').length %> l√≠neas</span>
                    <span class="char-count"><%= routine.gcodeContent.length %> caracteres</span>
                </div>
            </div>
            <div class="code-viewer">
                <pre class="gcode-content"><code><%= routine.gcodeContent %></code></pre>
            </div>
        </div>
    </div>
</div>

