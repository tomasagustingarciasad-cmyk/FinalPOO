    <h2>‚úèÔ∏è Editar Rutina: <%= routine.filename %></h2>
    <div class="actions">
        <a href="/routines/<%= routine.id %>" class="btn btn-secondary">üîô Volver a Rutina</a>
        <a href="/routines" class="btn btn-secondary">üìã Lista de Rutinas</a>
    </div>
</div>

<% if (locals.error) { %>
    <div class="alert alert-error">
        <strong>‚ùå Error:</strong> <%= error %>
    </div>
<% } %>

<div class="form-container">
    <form method="post" action="/routines/<%= routine.id %>" enctype="multipart/form-data" class="routine-form">
        <div class="current-info">
            <h3>üìã Informaci√≥n Actual</h3>
            <div class="info-grid">
                <div class="info-item">
                    <label>Archivo actual:</label>
                    <value><%= routine.filename %></value>
                </div>
                <div class="info-item">
                    <label>Tama√±o:</label>
                    <value><%= Math.round(routine.fileSize / 1024 * 100) / 100 %> KB</value>
                </div>
                <div class="info-item">
                    <label>Creada:</label>
                    <value><%= new Date(routine.createdAt * 1000).toLocaleString('es-ES') %></value>
                </div>
            </div>
        </div>

        <div class="edit-section">
            <h3>‚úèÔ∏è Editar Informaci√≥n</h3>
            
            <div class="form-group">
                <label for="filename">Nombre del archivo:</label>
                <input type="text" 
                       id="filename" 
                       name="filename" 
                       value="<%= routine.filename %>"
                       required
                       class="form-control">
            </div>

            <div class="form-group">
                <label for="description">Descripci√≥n:</label>
                <textarea id="description" 
                          name="description" 
                          class="form-control"
                          rows="3"><%= routine.description || '' %></textarea>
            </div>
        </div>

        <div class="upload-section">
            <h3>üìÅ Reemplazar con Nuevo Archivo (Opcional)</h3>
            <div class="file-upload">
                <input type="file" 
                       id="gcodeFile" 
                       name="gcodeFile" 
                       accept=".gcode,.nc,.g,.txt"
                       class="file-input">
                <label for="gcodeFile" class="file-label">
                    <span class="file-icon">üìÑ</span>
                    <span class="file-text">Seleccionar nuevo archivo G-code</span>
                </label>
                <p class="file-help">Si no seleccionas un archivo, se mantendr√° el contenido actual</p>
            </div>
        </div>

        <div class="code-section">
            <h3>üìù Contenido G-code</h3>
            <div class="form-group">
                <label for="gcodeContent">C√≥digo G-code:</label>
                <textarea id="gcodeContent" 
                          name="gcodeContent" 
                          class="form-control code-editor"
                          rows="20"
                          required><%= routine.gcodeContent %></textarea>
            </div>

            <div class="code-stats">
                <span class="line-count">L√≠neas: <span id="lineCount"><%= routine.gcodeContent.split('\n').length %></span></span>
                <span class="char-count">Caracteres: <span id="charCount"><%= routine.gcodeContent.length %></span></span>
            </div>

            <div class="gcode-help">
                <h4>üí° Comandos G-code √∫tiles:</h4>
                <div class="help-buttons">
                    <button type="button" onclick="insertGcode('G28 ; Home all axes')" class="help-btn">Home (G28)</button>
                    <button type="button" onclick="insertGcode('G1 X0 Y0 Z0 F3000 ; Move to origin')" class="help-btn">Mover a origen</button>
                    <button type="button" onclick="insertGcode('G1 Z5 F3000 ; Lift Z')" class="help-btn">Levantar Z</button>
                    <button type="button" onclick="insertGcode('M106 S255 ; Gripper ON')" class="help-btn">Gripper ON</button>
                    <button type="button" onclick="insertGcode('M107 ; Gripper OFF')" class="help-btn">Gripper OFF</button>
                    <button type="button" onclick="insertGcode('G4 P1000 ; Wait 1 second')" class="help-btn">Pausa 1s</button>
                    <button type="button" onclick="insertGcode('M84 ; Disable steppers')" class="help-btn">Desactivar motores</button>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">üíæ Guardar Cambios</button>
            <a href="/routines/<%= routine.id %>" class="btn btn-secondary">‚ùå Cancelar</a>
        </div>
    </form>
</div>

