<script>
// Manejar la selecci√≥n de archivo
document.getElementById('gcodeFile').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
        const label = document.querySelector('.file-text');
        label.textContent = file.name;
        
        // Leer el archivo y reemplazar el contenido del textarea
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('gcodeContent').value = e.target.result;
            updateStats();
        };
        reader.readAsText(file);
    }
});

// Actualizar estad√≠sticas de l√≠neas y caracteres
function updateStats() {
    const content = document.getElementById('gcodeContent').value;
    const lines = content.split('\n').length;
    const chars = content.length;
    
    document.getElementById('lineCount').textContent = lines;
    document.getElementById('charCount').textContent = chars;
}

// Insertar c√≥digo G-code com√∫n
function insertGcode(code) {
    const textarea = document.getElementById('gcodeContent');
    const start = textarea.selectionStart;
    const end = textarea.selectionEnd;
    const text = textarea.value;
    
    // Insertar el c√≥digo en la posici√≥n del cursor
    const before = text.substring(0, start);
    const after = text.substring(end);
    
    // Agregar nueva l√≠nea si no est√° al final de una l√≠nea
    const prefix = (before && !before.endsWith('\n')) ? '\n' : '';
    const suffix = '\n';
    
    textarea.value = before + prefix + code + suffix + after;
    
    // Posicionar el cursor despu√©s del texto insertado
    const newPos = start + prefix.length + code.length + suffix.length;
    textarea.setSelectionRange(newPos, newPos);
    textarea.focus();
    
    updateStats();
}

// Actualizar estad√≠sticas al escribir
document.getElementById('gcodeContent').addEventListener('input', updateStats);

// Validar formulario
document.querySelector('.routine-form').addEventListener('submit', function(e) {
    const content = document.getElementById('gcodeContent').value.trim();
    const filename = document.getElementById('filename').value.trim();
    
    if (!content || !filename) {
        e.preventDefault();
        alert('El nombre del archivo y el contenido G-code son obligatorios.');
        return false;
    }
    
    return true;
});

// Inicializar estad√≠sticas
updateStats();
</script>