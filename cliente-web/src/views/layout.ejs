<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Robot Client</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <header class="topbar">
        <h1>Robot Client</h1>
        <nav>
            <% if (user) { %>
                <a href="/panel">🏠 Panel</a>
                <a href="/routines">🔧 Rutinas</a>
                <a href="/robot">🤖 Robot</a>
                <a href="/learning">🎓 Aprendizaje</a>
                <% if (user.role === 'ADMIN') { %>
                    <a href="/panel/users">👥 Usuarios</a>
                <% } %>
                <form method="post" action="/logout" style="display:inline; margin-left: 1rem;">
                <button type="submit">Logout (<%= user.username %>)</button>
                </form>
            <% } else { %>
                <a href="/login">Login</a>
            <% } %>
        </nav>
    </header>
    <main class="container">
        
        <%- body %>
    </main>
    <footer class="footer">© <%= new Date().getFullYear() %> Robot UI</footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>