<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Panel de Control del Robot</h2>
            
            <!-- Enlaces de navegación para administradores -->
            <% if (typeof user !== 'undefined' && user && user.roles && user.roles.includes('ADMIN')) { %>
            <div class="mb-3">
                <a href="/panel/users" class="btn btn-outline-primary">
                    <i class="bi bi-people"></i> Gestión de Usuarios
                </a>
            </div>
            <% } %>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Estado del Sistema</h5>
                </div>
                <div class="card-body">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle"></i> <%= error %>
                        </div>
                    <% } %>
                    
                    <% if (success) { %>
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> <%= success %>
                        </div>
                    <% } %>
                    
                    <% if (status) { %>
                        <div class="row">
                            <div class="col-6">
                                <strong>Modo:</strong> <%= status.mode || 'N/A' %>
                            </div>
                            <div class="col-6">
                                <strong>Info:</strong> <%= status.info || 'N/A' %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-4">
                                <strong>Conexión:</strong>
                                <% if (typeof status.connected !== 'undefined') { %>
                                    <span class="badge <%= status.connected ? 'bg-success' : 'bg-danger' %>">
                                        <%= status.connected ? 'CONECTADO' : 'DESCONECTADO' %>
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-secondary">N/A</span>
                                <% } %>
                            </div>
                            <div class="col-4">
                                <strong>Motores:</strong> 
                                <span class="badge <%= status.motorsOn ? 'bg-success' : 'bg-secondary' %>">
                                    <%= status.motorsOn ? 'ON' : 'OFF' %>
                                </span>
                            </div>
                            <div class="col-4">
                                <strong>Gripper:</strong>
                                <span class="badge <%= status.gripperOn ? 'bg-success' : 'bg-secondary' %>">
                                    <%= status.gripperOn ? 'ON' : 'OFF' %>
                                </span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-12">
                                <strong>Posición:</strong>
                                <% if (status.position) { %>
                                    X: <%= status.position.x || 0 %>, 
                                    Y: <%= status.position.y || 0 %>, 
                                    Z: <%= status.position.z || 0 %>
                                <% } else { %>
                                    No disponible
                                <% } %>
                            </div>
                        </div>
                    <% } else { %>
                        <p class="text-muted">No hay información de estado disponible.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-joystick"></i> Controles</h5>
                </div>
                <div class="card-body">
                    <!-- Controles de Conexión -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Estado de Conexión:</strong>
                            <% if (status && typeof status.connected !== 'undefined') { %>
                                <span class="badge <%= status.connected ? 'bg-success' : 'bg-danger' %>">
                                    <%= status.connected ? 'CONECTADO' : 'DESCONECTADO' %>
                                </span>
                            <% } else { %>
                                <span class="badge bg-secondary">DESCONOCIDO</span>
                            <% } %>
                        </div>
                    </div>
                    <% if (user.role === 'ADMIN') { %>
                    <div class="row mb-3">
                        <div class="col-12">
                            <% if (status && status.connected) { %>
                                <form method="post" action="/robot/disconnect" class="d-inline w-100">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-plug-fill"></i> Desconectar
                                    </button>
                                </form>
                            <% } else { %>
                                <button type="button" class="btn btn-success w-100" onclick="showConnectModal()">
                                    <i class="bi bi-plug"></i> Conectar Robot
                                </button>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                    <div class="row mb-3">
                        <div class="col-12">
                            <form method="post" action="/robot/homing" class="d-inline">
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-house"></i> Homing
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-12">
                            <% if (status && typeof status.motorsOn !== 'undefined') { %>
                                <form method="post" action="/robot/motors" class="d-inline w-100">
                                    <input type="hidden" name="on" value="<%= status.motorsOn ? 0 : 1 %>">
                                    <button type="submit" class="btn <%= status.motorsOn ? 'btn-outline-danger' : 'btn-success' %> w-100">
                                        <i class="bi bi-power"></i> <%= status.motorsOn ? 'Motores OFF' : 'Motores ON' %>
                                    </button>
                                </form>
                            <% } else { %>
                                <button type="button" class="btn btn-secondary w-100" disabled>Estado motores desconocido</button>
                            <% } %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <% if (status && typeof status.gripperOn !== 'undefined') { %>
                                <form method="post" action="/robot/gripper" class="d-inline w-100">
                                    <input type="hidden" name="on" value="<%= status.gripperOn ? 0 : 1 %>">
                                    <button type="submit" class="btn <%= status.gripperOn ? 'btn-outline-secondary' : 'btn-info' %> w-100">
                                        <i class="bi bi-gear"></i> <%= status.gripperOn ? 'Gripper OFF' : 'Gripper ON' %>
                                    </button>
                                </form>
                            <% } else { %>
                                <button type="button" class="btn btn-secondary w-100" disabled>Estado gripper desconocido</button>
                            <% } %>
                        </div>
                    </div>

                    <hr>
                    <% const moveDefaults = (typeof moveForm !== 'undefined' && moveForm) ? moveForm : { x: '', y: '', z: '', feed: '' }; %>
                    <% const learningDefaults = learningMeta ? { routineName: learningMeta.routineName || '', description: learningMeta.description || '' } : { routineName: '', description: '' }; %>
                    <h6 class="text-uppercase text-muted">Movimiento cartesiano (G1)</h6>
                    <form method="post" action="/robot/move?redirect=panel">
                        <div class="row g-2">
                            <div class="col-6 col-lg-3">
                                <label class="form-label">X (mm)</label>
                                <input type="number" step="any" name="x" class="form-control" value="<%= moveDefaults.x %>" required>
                            </div>
                            <div class="col-6 col-lg-3">
                                <label class="form-label">Y (mm)</label>
                                <input type="number" step="any" name="y" class="form-control" value="<%= moveDefaults.y %>" required>
                            </div>
                            <div class="col-6 col-lg-3">
                                <label class="form-label">Z (mm)</label>
                                <input type="number" step="any" name="z" class="form-control" value="<%= moveDefaults.z %>" required>
                            </div>
                            <div class="col-6 col-lg-3">
                                <label class="form-label">Feed (F)</label>
                                <input type="number" step="any" name="feed" class="form-control" value="<%= moveDefaults.feed %>">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12 d-flex justify-content-end gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-arrow-up-right"></i> Enviar movimiento
                                </button>
                            </div>
                        </div>
                        <div class="form-text mt-2">
                            Si la velocidad (Feed) se deja vacía se utilizará el valor por defecto configurado en el servidor.
                        </div>
                    </form>

                    <hr>
                    <div class="d-flex align-items-center justify-content-between">
                        <h6 class="text-uppercase text-muted mb-0">Modo aprendizaje</h6>
                        <span class="badge <%= learningActive ? 'bg-success' : 'bg-secondary' %>">
                            <%= learningActive ? 'ACTIVO' : 'INACTIVO' %>
                        </span>
                    </div>
                    <div class="small text-muted mb-3">Registra movimientos manuales para generar una nueva rutina G-code.</div>

                    <% if (!learningActive && learningRoutineName) { %>
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-robot"></i> Rutina <strong><%= learningRoutineName %></strong> creada correctamente
                            <% if (learningRoutineId) { %>
                                (ID: <%= learningRoutineId %>)
                            <% } %>
                        </div>
                    <% } %>

                    <% if (!learningActive) { %>
                        <form method="post" action="/robot/learning/start" class="mt-3">
                            <div class="row g-2 align-items-end">
                                <div class="col-12 col-lg-5">
                                    <label class="form-label">Nombre de la rutina (opcional)</label>
                                    <input type="text" name="routineName" class="form-control" placeholder="Ej. pick_and_place" value="<%= learningDefaults.routineName %>">
                                </div>
                                <div class="col-12 col-lg-5">
                                    <label class="form-label">Descripción (opcional)</label>
                                    <input type="text" name="description" class="form-control" placeholder="Breve descripción" value="<%= learningDefaults.description %>">
                                </div>
                                <div class="col-12 col-lg-2 d-grid">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="bi bi-toggle2-on"></i> Activar
                                    </button>
                                </div>
                            </div>
                            <div class="form-text mt-2">
                                Cuando el modo esté activo, cada movimiento manual registrado generará una nueva rutina.
                            </div>
                        </form>
                    <% } else { %>
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-info-circle"></i> El aprendizaje está registrando movimientos manuales.
                        </div>
                        <form method="post" action="/robot/learning/stop" class="mt-3">
                            <div class="row g-2">
                                <div class="col-12 col-lg-6">
                                    <label class="form-label">Nombre de la rutina</label>
                                    <input type="text" name="routineName" class="form-control" value="<%= learningDefaults.routineName %>" required>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <label class="form-label">Descripción</label>
                                    <input type="text" name="description" class="form-control" value="<%= learningDefaults.description %>" required>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12 d-flex justify-content-end gap-2">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-stop-circle"></i> Finalizar y generar rutina
                                    </button>
                                </div>
                            </div>
                            <div class="form-text mt-2">
                                Al finalizar se generará el archivo G-code y la rutina quedará disponible en la lista de rutinas.
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Configuración de Conexión -->
<div class="modal fade" id="connectModal" tabindex="-1" aria-labelledby="connectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="connectModalLabel">
                    <i class="bi bi-plug"></i> Conectar Robot
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/robot/connect">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="port" class="form-label">Puerto Serie</label>
                        <select class="form-select" id="port" name="port" required>
                            <option value="/dev/ttyUSB0" selected>/dev/ttyUSB0 (USB Serial)</option>
                            <option value="/dev/ttyACM0">/dev/ttyACM0 (Arduino)</option>
                            <option value="/dev/ttyS0">/dev/ttyS0 (Serial Port 1)</option>
                            <option value="/dev/ttyS1">/dev/ttyS1 (Serial Port 2)</option>
                            <option value="COM1">COM1 (Windows)</option>
                            <option value="COM2">COM2 (Windows)</option>
                            <option value="COM3">COM3 (Windows)</option>
                        </select>
                        <div class="form-text">
                            Selecciona el puerto donde está conectado el robot
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="baudrate" class="form-label">Velocidad (Baudrate)</label>
                        <select class="form-select" id="baudrate" name="baudrate" required>
                            <option value="9600">9600 bps</option>
                            <option value="19200">19200 bps</option>
                            <option value="38400">38400 bps</option>
                            <option value="57600">57600 bps</option>
                            <option value="115200" selected>115200 bps</option>
                            <option value="250000">250000 bps</option>
                        </select>
                        <div class="form-text">
                            Velocidad de comunicación serie con el robot
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plug"></i> Conectar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showConnectModal() {
    const modal = new bootstrap.Modal(document.getElementById('connectModal'));
    modal.show();
}

// Mostrar mensajes de éxito/error si existen en la URL
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    const error = urlParams.get('error');
    
    if (success) {
        showAlert('success', success);
        // Limpiar la URL
        window.history.replaceState({}, document.title, window.location.pathname);
    }
    
    if (error) {
        showAlert('danger', error);
        // Limpiar la URL
        window.history.replaceState({}, document.title, window.location.pathname);
    }

    const moveFormElement = document.querySelector('form[action^="/robot/move"]');
    if (moveFormElement) {
        // Constantes tomadas de Firmware/robotArm_v0.62sim/config.h
        const config = {
            LOW_SHANK_LENGTH: 120.0,
            HIGH_SHANK_LENGTH: 120.0,
            SHANKS_MIN_ANGLE_COS: 0.791436948,
            SHANKS_MAX_ANGLE_COS: -0.774944489,
            Z_MIN: -115,
            Z_OFFSET: 30.0
        };

        const radialBounds = {
            min: Math.sqrt(
                (config.LOW_SHANK_LENGTH ** 2 + config.HIGH_SHANK_LENGTH ** 2) -
                (2 * config.LOW_SHANK_LENGTH * config.HIGH_SHANK_LENGTH * config.SHANKS_MIN_ANGLE_COS)
            ),
            max: Math.sqrt(
                (config.LOW_SHANK_LENGTH ** 2 + config.HIGH_SHANK_LENGTH ** 2) -
                (2 * config.LOW_SHANK_LENGTH * config.HIGH_SHANK_LENGTH * config.SHANKS_MAX_ANGLE_COS)
            )
        };

        const zBounds = {
            min: config.Z_MIN,
            max: config.LOW_SHANK_LENGTH + config.Z_OFFSET
        };

        moveFormElement.addEventListener('submit', (event) => {
            const formData = new FormData(moveFormElement);
            const x = Number.parseFloat(formData.get('x'));
            const y = Number.parseFloat(formData.get('y'));
            const z = Number.parseFloat(formData.get('z'));

            if ([x, y, z].some((value) => Number.isNaN(value))) {
                event.preventDefault();
                showAlert('danger', 'Las coordenadas deben ser valores numericos validos.');
                return;
            }

            const radial = Math.hypot(x, y);
            const errors = [];

            if (radial < radialBounds.min || radial > radialBounds.max) {
                errors.push(`La distancia al origen debe estar entre ${radialBounds.min.toFixed(1)} mm y ${radialBounds.max.toFixed(1)} mm (radio actual: ${radial.toFixed(1)} mm).`);
            }

            if (y < 0) {
                errors.push('El eje Y no puede ser menor que 0 mm.');
            }

            if (z < zBounds.min || z > zBounds.max) {
                errors.push(`El eje Z debe estar entre ${zBounds.min} mm y ${zBounds.max} mm (valor actual: ${z} mm).`);
            }

            if (errors.length > 0) {
                event.preventDefault();
                showAlert('danger', `Movimiento fuera del workspace:<br>${errors.join('<br>')}`);
            }
        });
    }
});

function showAlert(type, message) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
    alertDiv.role = 'alert';
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;
    
    // Insertar al inicio del container
    const container = document.querySelector('.container');
    container.insertBefore(alertDiv, container.firstChild);
    
    // Auto-ocultar después de 5 segundos
    setTimeout(() => {
        alertDiv.remove();
    }, 5000);
}
</script>