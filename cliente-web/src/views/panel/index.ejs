<section class="grid">
    <div class="card">
        <h3>Status</h3>
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } else if (status) { %>
            <pre><%= JSON.stringify(status, null, 2) %></pre>
        <% } else { %>
            <p>No status available.</p>
        <% } %>
    </div>

    <div class="card">
        <h3>Controls</h3>
        <form method="post" action="/homing">
            <button type="submit">Homing</button>
        </form>
        <form method="post" action="/motors">
            <input type="hidden" name="on" value="1">
            <button type="submit">Motors ON</button>
        </form>
        <form method="post" action="/motors">
            <input type="hidden" name="on" value="0">
            <button type="submit">Motors OFF</button>
        </form>
        <form method="post" action="/gripper">
            <input type="hidden" name="on" value="1">
            <button type="submit">Gripper ON</button>
        </form>
        <form method="post" action="/gripper">
            <input type="hidden" name="on" value="0">
            <button type="submit">Gripper OFF</button>
        </form>
    </div>
</section>